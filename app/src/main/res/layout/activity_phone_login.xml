<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PhoneLoginActivity">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/phone_num_input"
        android:layout_alignParentStart="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="35dp"
        android:background="@drawable/inputs"
        android:padding="8dp"
        android:hint="Enter The Phone Number Here"
        android:textSize="15sp"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:inputType="number"
        android:textAlignment="center"
        android:drawableStart="@drawable/phone" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/verification_code_input"
        android:layout_alignParentStart="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="35dp"
        android:background="@drawable/inputs"
        android:padding="5dp"
        android:layout_below="@+id/phone_num_input"
        android:hint="Enter OTP Here"
        android:textSize="15sp"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textAlignment="center"
        android:drawableStart="@drawable/password"
        android:visibility="invisible"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/send_ver_button"
        android:text="Send Otp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="35dp"
        android:layout_below="@+id/verification_code_input"
        android:background="@drawable/buttons"
        android:textSize="19sp"
        android:textColor="@color/colorAccent"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ver_button"
        android:text="Verify"
        android:layout_marginStart="35dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="35dp"
        android:layout_below="@+id/send_ver_button"
        android:background="@drawable/buttons"
        android:textSize="19sp"
        android:textColor="@color/colorAccent"
        android:visibility="invisible"/>

</RelativeLayout>